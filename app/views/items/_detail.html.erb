        
						<%= attachment_image_tag item, :image, :fill, 500, 350, format: "png",class:"new_image"%>

								 	

						<table class = "table">
								<tbody>
									<tr>
											<th>Title</th>
				      				<td><%= item.title %></td>
									</tr>
									<tr>
											<th>Comment</title></th>
				      				<td><%= item.body %></td>
									</tr>
									<tr>
											<th>Genre</title></th>
				      				<td><%= item.genre_name %></td>
									</tr>

								</tbody>
								<th><% if item.favorited_by?(current_user) %>
													<%= link_to item_favorites_path(item), method: :delete do %>
														<span class="fa fa-heart" style="color: red;"></span>
														<%= item.favorites.count %>
													<% end %>
										<% else %>
													<%= link_to item_favorites_path(item), method: :post do %>
														<span class="fa fa-heart">
														<%= item.favorites.count %></span>
													<% end %>
								</th>	
								 		<% end %>
								 <td><i class="fa fa-comment"></i>
													<%= item.item_comments.count %>
													<% item.item_comments.count %>
                </td>

								 		
						</table>

					<div class = "bottun">
					<% if item.user == current_user %>
							<%= link_to "Edit", edit_item_path(item), class: "btn-sm btn-success" %>
        			<%= link_to "Delete",item_path(item),method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn-sm btn-danger" %>
					<% end %>
					</div>