      <% items.each do |item| %>
				<div class="col-md-4 col-sm-6 col-xs-10">
          <div class ="form_box">
              <div class = "user_name">
                  <span class="fas fa-map-pin" ></span> 
                  <%= link_to item.user.name, user_path(item.user) %>
              </div>
					        <%= link_to item_path(item.id) do %>
                    <div class = "item_photos">
							        <%= attachment_image_tag item, :image,format: "png"%>
                    </div>
                      <% if item.favorited_by?(current_user) %>
											    <%= link_to item_favorites_path(item), method: :delete do %>
                     				<span class="fa fa-heart" style="color: red; margin-left: 6%"></span>
                      			<%= item.favorites.count %>
                      		<% end %>
                      <% else %>
                       		<%= link_to item_favorites_path(item), method: :post do %>
                       		<span class="fa fa-heart" style="margin-left: 6%">
                       		<%= item.favorites.count %><span>
                    			<% end %>	
								      <% end %>
                      <i class="far fa-comment fa-lg"></i>
											<%= item.item_comments.count %>
                      <% item.item_comments.count %>
							        <i><%= item.title %></i>

					        <% end %>

				  </div>
        </div>
			<% end %>