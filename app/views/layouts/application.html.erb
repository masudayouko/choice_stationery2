<!DOCTYPE html>
<html>
  <head>
    <title>choice_stationery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome-animation/0.0.10/font-awesome-animation.css" type="text/css" media="all" />
  </head>

  <body>
  
    <header class="navbar navbar-fixed-top">
      <div class="container">

        <nav class="nav navbar-nav navbar-left">
          <div class = "logo">
          <%= link_to root_path do %>
          <%= image_tag 'logo.png'%>
          <% end %>
          </div>
        </nav>
        <% if user_signed_in? %>
        <nav class="nav navbar-nav">
          <div class="search-form" >
            <%= form_tag(search_path, method: :get) do %>
              <%= text_field_tag 'search[content]','', class: 'form', placeholder: "search" %>
              <%= select_tag 'search[model]', options_for_select({ "User" => "user", "Item" => "item" }) %>
              <%= submit_tag 'Search',class:'fas fa-search' %>
            <% end %>
         </div>
        </nav>
        <% end %>

        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>

              <li><%= link_to ' ', items_path, class:"fas fa-camera fa-lg" %></li>
              <li><%= link_to ' ', item_rankings_path, class:"fas fa-crown fa-lg" %></li>
              <li><%= link_to '', user_path(current_user.id), class:"fas fa-user fa-lg" %></li>
              <li><%= link_to ' ', users_path, class: 'fas fa-users fa-lg' %></li>
              <li><%= link_to ' ', destroy_user_session_path, method: :delete, class:"fas fa-sign-out-alt fa-lg" %></li>
            <% else %>
              <li><%= link_to ' ', root_path, class: "fas fa-home fa-lg" %></li>
              <li><%= link_to ' ', new_user_registration_path, class: 'fas fa-user-plus fa-lg' %></li>
              <li><%= link_to ' ', user_session_path, class: 'fas fa-sign-in-alt fa-lg' %></li>
            <% end %> 
          </ul>
        </nav>

      </div>
    </header>

    
    <div class="container">
      <p id="notice"><%= notice %></p>



<%= yield %>
    
    <div class="wrapper">
        <div class="container"> 
           

          <footer>
          <h4>Copyright Â© 2020 choice_stationery</h4>
          </footer>
    
        </div>
    </div>
  </body>
</html>
