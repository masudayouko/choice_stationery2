<div class ="row">
    <div class ="col-md-9 col-xs-12">
        <div class="stationerys">
      <%= image_tag 'drawing.png' %><br>
    </div>


    </div>
    <div class ="col-md-3 col-xs-6">
        <div class="form-header text-center">
            <h3 class="form-header-title">sign up</h3>
        </div>
        <br>
        <div class="form-body">
    
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
             <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group has-icon">
               <label>Name</label>
                <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"name"%>
            </div>
            
            <div class="form-group has-icon">
                 <label>Email</label>
                 <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
             <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"abc@abc"%>
            </div>

            <div class="form-group has-icon">
               <label>Password</label>
                 <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
                 <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:" password is 6 characters or more" %>
            </div>
            
            <div class="form-group has-icon">
                <label>Password</label>
                <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
             <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword", placeholder:"check password" %>
            </div>
        <br> 
        <%= f.submit "Sign up",class: "btn btn-defalt btn-block"%>
        <% end %>

        <br>
        <%= render "users/shared/links" %>
        </div>
    </div>
</div>
